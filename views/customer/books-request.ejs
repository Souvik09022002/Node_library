<%-include('../partials/header.html')%>
    <link rel="stylesheet" href="/../../css/customer.css">
    <title>Request New Book</title>
    </head>

    <body>

        <%-include('partials/navbar.html')%>
        <div class="container-fluid">
            <div class="row">
                <%-include('partials/sidebar.html')%>
                <div class="col-md-10 content">
                    <div class="row">
                        <div class="col-md-11 request-books">
                            <p class="display-4">Request a New Book</p>
                            <form class="" method="post">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Genre</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="genre">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Title</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="title">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Author</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="author">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Edition</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" name="edition">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">ISBN</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="isbn">
                                    </div>
                                </div>
                                <hr>
                                <div>
                                    <button type="submit" class="btn btn-primary">Request</button>
                                    <input class="btn btn-danger mx-3" type="button" value="No Go Back" onclick="history.go(-1)">
                                    <br>
                                </div>
                            </form>
                            <div class="">
                                <% for(var i=0; i< errs.length; i++){ %>
                                    <%= errs[i].message; %>
                                    <br>
                                <% } %>
                                <% for(var i=0; i< success.length; i++){ %>
                                    <%= success[i].message; %>
                                    <br>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<%-include('../partials/footer.html')%>

<style>
   .request-books {
        /* Add some padding to the request books section */
        padding: 20px;

        /* Add a transition effect to the request books section */
        transition: all 0.3s ease;
    }

   .request-books:hover {
        /* Add a background color to the request books section on hover */
        background-color: #f5f5f5;
    }

   .form-control {
        /* Add some padding to the form controls */
        padding: 10px;

        /* Add a transition effect to the form controls */
        transition: all 0.3s ease;
    }

   .form-control:focus {
        /* Add a box shadow to the form controls on focus */
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
    }

   .btn {
        /* Add some padding to the buttons */
        padding: 10px 20px;

        /* Add a transition effect to the buttons */
        transition: all 0.3s ease;
    }

   .btn:hover {
        /* Add a background color to the buttons on hover */
        background-color: #007bff;

        /* Change the color of the text on the buttons on hover */
        color: #fff;
    }
</style>